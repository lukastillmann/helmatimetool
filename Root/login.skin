<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
		<title><% param.title %></title>
    <!-- Bootstrap -->
    <link href="/static/helma_lukas/css/bootstrap.min.css" rel="stylesheet">
		<!-- MetisMenu CSS -->
		<link href="/static/helma_lukas/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
		<!-- Custom Fonts -->
		<link href="/static/helma_lukas/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
		<! -- Bootstrap Datepicker -->
		<link href="/static/helma_lukas/vendor/bootstrap-datepicker/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css">
		<!-- jquery-timepicker -->
		<link href="/static/helma_lukas/vendor/jquery-timepicker/jquery.timepicker.min.css" rel="stylesheet" type="text/css">
		<!-- Bootstrap-select -->
		<link rel="stylesheet" href="/static/helma_lukas/vendor/bootstrap-select/bootstrap-select.min.css">

		<! -- Theme -->
		<link href="/static/helma_lukas/vendor/sb-admin-2.css" rel="stylesheet">
	 <link rel="Stylesheet" href="/static/helma_lukas/style.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
		<div id="wrapper">
			<nav class="navbar navbar-default navbar-static-top" role="navigation">
			</nav>
			<div id="page-wrapper" class="<% param.fullscreen %>">
				<div class="row">
					<div class="col-lg-12">
							<div class="loginForm">
								<div class="loginForm-header">
									<h1 class="loginForm-h1">Login</h1>
								</div> 
								 <form action="login" method="POST">
									<div class="loginForm-group">      
										<input class="loginForm-input type="text" name="username" required>
										<span class="loginForm-highlight"></span>
										<span class="loginForm-bar"></span>
										<label class="loginForm-label">Username</label>
									</div>
									<div class="loginForm-group">      
										<input class="loginForm-input" type="password" name="password" required>
										<span class="loginForm-highlight"></span>
										<span class="loginForm-bar"></span>
										<label class="loginForm-label">Password</label>
									</div>
									<input class="loginForm-button" type="submit" name="login" value="Login"></input>
								</form>
								<div class="loginForm-footerbox">
									<p class="loginForm-footertext">Kein Benutzername? <a href="register" class="loginForm-signup">Hier anmelden</span></p>
								</div>
							</div>
						</div>
				</div>
			</div>
		</div>

		<!-- Edittimes Modal -->
		<div class="modal fade" id="editme" tabindex="-1" role="dialog" aria-labelledby="editmeLabel">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
				</div>
			</div>
		</div>


		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="/static/helma_lukas/vendor/jquery/jquery.min.js"></script>
		<!-- Include all compiled plugins (below), or include individual files as needed -->
		<script src="/static/helma_lukas/js/bootstrap.min.js"></script>

		<!-- Metis Menu Plugin JavaScript -->
		<script src="/static/helma_lukas/vendor/metisMenu/metisMenu.min.js"></script>
		<!-- Bootstrap Datepicker -->
		<script src="/static/helma_lukas/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
		<!-- jquery timepicker -->
		<script type="text/javascript" src="/static/helma_lukas/vendor/jquery-timepicker/jquery.timepicker.min.js"></script>
		<!-- bootstrap-select -->
		<script src="/static/helma_lukas/vendor/bootstrap-select/bootstrap-select.min.js"></script>

		<!-- custom js -->
		<script src="/static/helma_lukas/js/functions.js"></script>
  </body>
</html>
